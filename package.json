{
  "name": "video-platform-back-end",
  "version": "1.0.0",
  "description": "",
  "private": true,
  "egg": {
    "typescript": true,
    "declarations": true
  },
  "scripts": {
    "start": "egg-scripts start --daemon --title=egg-server-video-platform-back-end",
    "stop": "egg-scripts stop --title=egg-server-video-platform-back-end",
    "dev": "egg-bin dev",
    "test-local-watch": "egg-bin test --watch-extensions ts --watch --file ./test/.setup.ts",
    "test-local": "egg-bin test --file ./test/.setup.ts --full-trace",
    "test": "npm run lint -- --fix && npm run test-local",
    "cov": "egg-bin cov",
    "tsc": "ets && tsc -p tsconfig.json",
    "ci": "npm run lint && npm run cov && npm run tsc",
    "autod": "autod",
    "lint": "eslint . --fix --ext .ts",
    "clean": "ets clean",
    "commit": "git-cz",
    "db:migrate": "cd ./database && npx sequelize db:migrate",
    "debug": "egg-bin debug"
  },
  "dependencies": {
    "bcrypt": "^4.0.0",
    "egg": "^2.6.1",
    "egg-jwt": "^3.1.7",
    "egg-scripts": "^2.6.0",
    "egg-sequelize": "^5.2.1",
    "egg-swagger-doc": "^2.3.2",
    "egg-validate": "^2.0.2",
    "mysql2": "^2.1.0",
    "uuid": "^7.0.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@types/mocha": "^2.2.40",
    "@types/node": "^7.0.12",
    "@types/supertest": "^2.0.0",
    "@typescript-eslint/eslint-plugin": "^2.21.0",
    "@typescript-eslint/parser": "^2.21.0",
    "autod": "^3.0.1",
    "autod-egg": "^1.1.0",
    "commitizen": "^4.0.3",
    "cz-conventional-changelog": "^3.1.0",
    "egg-bin": "^4.11.0",
    "egg-ci": "^1.8.0",
    "egg-mock": "^3.16.0",
    "egg-ts-helper": "^1.25.6",
    "eslint": "^6.8.0",
    "eslint-config-egg": "^8.0.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-prettier": "^3.1.2",
    "factory-girl": "^5.0.4",
    "husky": "^4.2.3",
    "lint-staged": "^10.0.8",
    "prettier": "^1.19.1",
    "sequelize-cli": "^5.5.1",
    "tslib": "^1.9.0",
    "typescript": "^3.0.0"
  },
  "engines": {
    "node": ">=8.9.0"
  },
  "ci": {
    "version": "8"
  },
  "repository": {
    "type": "git",
    "url": ""
  },
  "eslintIgnore": [
    "coverage"
  ],
  "author": "",
  "license": "MIT",
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "EGG_SERVER_ENV=unittest npm run test",
      "commit-msg": "commitlint -e $GIT_PARAMS"
    }
  }
}
